<% if @values && @labels %>
  <div id="container" style="width:100%; height:600px;"></div>

  <%= javascript_tag do %>
        $('#container').highcharts({
            chart: {
                type: 'column'
            },
            title: {
                text: '<%= header %>'
            },
            xAxis: {
                categories: <%= @labels.inspect.html_safe %>
            },
            yAxis: {
                title: {
                    text: '<%= label %>'
                }
            },
            series: [{
              name: '<%= label %>',
              data: <%= @values.inspect.html_safe %>
            }]            
        });
  <% end %>
<% else %>
  <div>Нет данных</div>
<% end %>