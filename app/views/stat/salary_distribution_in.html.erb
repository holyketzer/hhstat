<h1>Salary distribution in <%= @year %></h1>

<div>
	<div>See another years</div>
	<% @years.each do |year| %>
		<%= link_to "#{year}", :controller => "stat", :action => "salary_distribution_in", :year => year %>
	<% end %>
</div>

<div>
  <canvas id="currentYearTimeChart"></canvas>
</div>

<% if @salaries %>
	<% c = [151,87,205].shuffle! %>
	<%= javascript_tag do %>
	  var data = {
			labels : [<%= @salaries.html_safe %>],
			datasets : [
				{
					fillColor : "rgba(<%= c[0] %>, <%= c[1] %>, <%= c[2] %>,0.5)",
					strokeColor : "rgba(151,187,205,1)",
					data : [<%= @values %>]
				}
			]
		}
		var ctx = $("#currentYearTimeChart").get(0).getContext("2d")
		ctx.canvas.width  = window.innerWidth - 100;
		ctx.canvas.height = window.innerHeight - 150;
		var chart = new Chart(ctx).Bar(data);
	<% end %>
<% else %>
	<div>No data for this period</div>
<% end %>